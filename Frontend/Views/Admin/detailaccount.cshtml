<script>
        $(document).ready(function () {
            // Lấy user ID từ URL (tham số truyền vào)
            var urlParams = new URLSearchParams(window.location.search);
            var userId = urlParams.get('id');

            // Kiểm tra nếu có user ID thì thực hiện AJAX request để lấy thông tin người dùng
            if (userId) {
                $.ajax({
                    url: 'http://localhost:5020/Admin/ManageUser/GetUser/' + userId,
                    method: 'GET',
                    dataType: 'json',
                    success: function (userData) {
                        // Điền thông tin người dùng vào các trường trong form
                        $('#userName').val(userData.userName);
                        @* $('#status').val(userData.status); *@
                        $('#email').val(userData.email);
                        $('#password').val(userData.password); // Lưu ý: Không nên hiển thị mật khẩu như này
                        // Xử lý checkbox roles tùy thuộc vào dữ liệu từ API
                        $('#teacherCheckbox').prop('checked', userData.roles.includes('Teacher'));
                        $('#adminCheckbox').prop('checked', userData.roles.includes('Admin'));
                        $('#studentCheckbox').prop('checked', userData.roles.includes('Student'));
                    },
                    error: function () {
                        console.error('Error fetching detailed user information');
                    }
                });
            }
        });
    </script>
