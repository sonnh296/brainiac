@{
    Layout = "_LayoutHome";
}
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <title>PRN231_LIST OBJECT</title>
    <link rel="stylesheet" href="https://fonts.googleapis.com/css2?family=Poppins:wght@100;200;300;400;500;600&display=swap">
    <style>
        .glyphicon {
            margin-right: 5px;
        }

        .list {
            margin-left: 5%;
        }

        .thumbnail {
            margin-bottom: 20px;
            padding: 0px;
            -webkit-border-radius: 0px;
            -moz-border-radius: 0px;
            border-radius: 0px;
            height: 300px;
        }

        .item.list-group-item {
            float: none;
            width: 100%;
            background-color: #fff;
            margin-bottom: 10px;
        }

            .item.list-group-item:nth-of-type(odd):hover, .item.list-group-item:hover {
                background: #428bca;
            }

            .item.list-group-item .list-group-image {
                margin-right: 10px;
            }

            .item.list-group-item .thumbnail {
                margin-bottom: 0px;
            }

            .item.list-group-item .caption {
                padding: 9px 9px 0px 9px;
            }

            .item.list-group-item:nth-of-type(odd) {
                background: #eeeeee;
            }

            .item.list-group-item:before, .item.list-group-item:after {
                display: table;
                content: " ";
            }

            .item.list-group-item img {
                float: left;
            }

            .item.list-group-item:after {
                clear: both;
            }

        .list-group-item-text {
            margin: 0 0 11px;
        }

        .lead {
            margin-left: 3%;
        }


        :root {
            --crimson: crimson;
            --black: #333;
            --white: #fff;
            --light-black: #666;
            --light-bg: #eee;
            --dark-bg: rgba(0, 0, 0, .7);
            --border: 1px solid #999;
            --box-shadow: 0 5px 10px rgba(0, 0, 0, .1);
        }

        * {
            font-family: 'Poppins', sans-serif;
            margin: 0;
            padding: 0;
            box-sizing: border-box;
            outline: none;
            border: none;
            text-decoration: none;
            transition: all .2s linear;
        }

        body {
            background-color: var(--light-bg);
        }

        ::-webkit-scrollbar {
            width: 10px;
        }

        ::-webkit-scrollbar-track {
            background-color: transparent;
        }

        ::-webkit-scrollbar-thumb {
            background-color: var(--black);
        }

        .heading {
            margin-bottom: 20px;
            font-size: 30px;
            color: var(--black);
            text-transform: uppercase;
            text-align: center;
        }

        .btn {
            margin-top: 10px;
            display: inline-block;
            padding: 10px 30px;
            padding-left: 30px;
            cursor: pointer;
            font-size: 17px;
            background-color: var(--light-bg);
            color: var(--black);
            text-transform: capitalize;
            text-align: center;
            width: 105%;
        }

            .btn:hover {
                background-color: var(--crimson);
                color: var(--white);
            }

        .side-bar {
            height: 60%;
            width: 100%;
            top: 0;
            left: 0;
            z-index: 1000;
            background-color: var(--white);
            padding: 20px;
            border-right: var(--border);
            overflow-y: scroll;
        }

            .side-bar::-webkit-scrollbar {
                width: 5px;
            }

            .side-bar .box {
                border-bottom: var(--border);
                padding: 20px 0;
            }

                .side-bar .box .title {
                    margin-bottom: 10px;
                    color: var(--black);
                    font-size: 20px;
                    text-transform: uppercase;
                }

            .side-bar .btn {
                margin-left: 5px;
            }

                .side-bar .btn.active {
                    background-color: var(--crimson);
                    color: var(--white);
                }

            .side-bar .box #search-box {
                border: var(--border);
                padding: 12px;
                text-transform: none;
                color: var(--light-black);
                width: 100%;
                font-size: 17px;
            }

            .side-bar .reset-btn .btn {
                margin-top: 20px;
                width: 100%;
            }

        #side-menu {
            position: fixed;
            top: 20px;
            left: 20px;
            height: 50px;
            width: 50px;
            line-height: 50px;
            text-align: center;
            background-color: var(--white);
            color: var(--black);
            cursor: pointer;
            font-size: 25px;
            z-index: 1100;
            box-shadow: var(--box-shadow);
            border: var(--border);
            display: none;
        }

        .container-fluid {
            margin-top: 7%;
            padding-right: 15px;
            padding-left: 15px;
            margin-right: auto;
            margin-left: auto;
        }

        .thumbnail .caption {
            padding: 0px;
            color: #333;
        }

        .footer-area {
            width: 100%;
        }
    </style>
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/css/all.min.css">
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.2.0/css/bootstrap.min.css">
</head>
<body>
    <div class="container-fluid">
        <div class="row">
            <div class="col-lg-2 col-md-2 col-sm-4">
                <!-- Bootstrap Sidebar -->
                <div id="sidebar" class="side-bar">
                    <h1 class="heading">filter courses</h1>
                    <div class="box">
                        <h3 class="title">search course :</h3>
                        <input type="text" placeholder="search image..." id="search-box" class="form-control">
                    </div>
                    <div class="box">
                        <h3 class="title">category :</h3>
                        <div class="category" id="categoryfilter">

                            <button class="btn cate" value="animal">animals</button>
                            <button class="btn cate active" value="food">food</button>
                            <button class="btn cate" value="fish">fish</button>
                            <button class="btn cate" value="flower">flower</button>
                        </div>
                    </div>
                    <div class="box">
                        <h3 class="title">Price</h3>
                        <div class="type">
                            <h3 class="title">From :</h3>
                            <input type="text" placeholder="price greater than..." id="from" class="form-control">
                            <h3 class="title">to :</h3>
                            <input type="text" placeholder="price smaller than..." id="to" class="form-control">
                        </div>
                    </div>
                    <div class="reset-btn">
                        <button class="btn" id="filer">Filter Course</button>
                        <button class="btn" id="reset">reset all</button>
                    </div>
                </div>
                <!-- End Bootstrap Sidebar -->
            </div>
            <div class="col-lg-10 col-md-10 col-sm-8">
                <div class="list container">
                    <div class="well well-sm">
                        <strong></strong>
                        <div class="btn-group">
                        </div>
                    </div>
                    <div id="products" class=" row">
                    </div>
                </div>
            </div>
</body>
<script src="https://cdnjs.cloudflare.com/ajax/libs/jquery/2.1.3/jquery.min.js"></script>
<script src="https://maxcdn.bootstrapcdn.com/bootstrap/3.2.0/js/bootstrap.min.js"></script>
<script src="~/js/randomImage.js"></script>
<script src="~/js/auth/api.js"></script>
<script>
    $(document).ready(function () {
        Manager.GetAllProduct();
        $('.category .btn.cate').click(function () {
            // Remove 'active' class from all category buttons
            $('.category .btn.cate').removeClass('active');

            // Add 'active' class to the clicked category button
            $(this).addClass('active');
        });
        $('#reset').click(function () {
            Manager.GetAllProduct();
            var search = document.getElementById('search-box').value = "";

            var from = $('#from').val("");
            var to = $('#to').val("");
        });
        $('#filer').click(function () {
            // Remove 'active' class from all category buttons
            var search = document.getElementById('search-box').value;
            var category = $('#categoryfilter .btn.active').val();
            var from = $('#from').val();
            var to = $('#to').val();

            if (!search && !category && !from && !to) {
                // Case 1: all null
                alert('Please fill in at least one field.');
            } else if (search && !category && !from && !to) {
                // Case 3: only search is not null
                console.log('Search:', search);
                Manager.GetAllProductByLink(`http://localhost:5020/api/Home/GetCourseBySearch?search=${search}`);
            } else if (!search && category && !from && !to) {
                // Case 4: only category is not null
                console.log('Category:', category);
                if (category == 0) {
                } else {
                    Manager.GetAllProductByLink(`http://localhost:5020/api/Home/GetCourseByCate?cate=${category}`);
                    console.log('Category is:', category);
                    console.log(`http://localhost:5020/api/Home/GetCourseByCate?cate=${category}`);

                }
            } else if (!search && !category && from && to) {
                // Case 5: only from, to is not null
                if (from < 0 || to < 0) {
                    alert('Please enter valid price values.');
                } else {
                    console.log('From:', from);
                    console.log('To:', to);
                    Manager.GetAllProductByLink(`http://localhost:5020/api/Home/GetCourseByPrice?pricefrom=${from}&priceto=${to}`);
                }
            } else if (search && category && !from && !to) {
                // Case 6: only search, category is not null
                console.log('Search:', search);
                console.log('Category:', category);
                if (category == 0) {
                    Manager.GetAllProductByLink(`http://localhost:5020/api/Home/GetCourseBySearch?search=${search}`);
                } else {
                    Manager.GetAllProductByLink(`http://localhost:5020/api/Home/GetCourseBySearchCate?search=${search}&cate=${category}`);
                }
            } else if (search && !category && from && to) {
                // Case 7: only search, from, to is not null
                if (from < 0 || to < 0) {
                    alert('Please enter valid price values.');
                } else {
                    console.log('Search:', search);
                    console.log('From:', from);
                    console.log('To:', to);
                    Manager.GetAllProductByLink(`http://localhost:5020/api/Home/GetCourseBySearchPrice?search=${search}&pricefrom=${from}&priceto=${to}`);
                }
            } else if (!search && category && from && to) {
                // Case 8: only category, from, to is not null
                if (from < 0 || to < 0) {
                    alert('Please enter valid price values.');
                } else {
                    console.log('Category:', category);
                    console.log('From:', from);
                    console.log('To:', to);
                    if (category == 0) {
                        Manager.GetAllProductByLink(`http://localhost:5020/api/Home/GetCourseByPrice?pricefrom=${from}&priceto=${to}`);
                    } else {
                        Manager.GetAllProductByLink(`http://localhost:5020/api/Home/GetCourseByCatePrice?cate=${category}&pricefrom=${from}&priceto=${to}`);
                    }
                }
            } else {
                // Case 2: all var is not null
                console.log('Search:', search);
                console.log('Category:', category);
                console.log('From:', from);
                console.log('To:', to);
                if (category == 0) {
                    Manager.GetAllProductByLink(`http://localhost:5020/api/Home/GetCourseBySearchPrice?search=${search}&pricefrom=${from}&priceto=${to}`);
                } else {
                    Manager.GetAllProductByLink(`http://localhost:5020/api/Home/GetCourseBySearchCatePrice?search=${search}&cate=${category}&pricefrom=${from}&priceto=${to}`);

                }
            }
        });

    });
    var Manager = {
        GetAllProduct: function () {
            const urlParam = new URLSearchParams(window.location.search);
            const categoryId = urlParam.get("categoryId");
            

            var serviceUrl = "http://localhost:5020/api/Home/GetNewestCourse";

            if (categoryId != null) {
                serviceUrl = "http://localhost:5020/api/Home/GetCourseByCate?cate="+categoryId;
                }

            window.Manager.GetAPI(serviceUrl, onSuccess, onFailed);
            var obj = "";
            function onSuccess(jsonData) {
                obj = jsonData;
                var rows1 = "";

                $.each(jsonData, function (i, item) {


                    rows1 += `                        <div class="item col-lg-3 col-md-5 col-sm-11">
                                    <div class="thumbnail">
                                            <img class="group list-group-image img-fluid" src="https://ihs.redvector.com/lpe/assets/core/img/large-placeholder-course.png" alt="" />
                                        <div class="caption">
                                            <h4 class="group inner list-group-item-heading">
                                                    ${item.courseName}
                                            </h4>
                                               <p class="group inner list-group-item-text" style="position: relative;">
                                                                ${item.title}
                                                    </p>
                                                        <div class="row" style="position: absolute;bottom: 19px;right: 38px;">
                                                        <div class="col-6">
                                                            <p class="lead">
                                                                        $ ${item.price}
                                                            </p>
                                                </div>
                                                <div class="col-6">
                                                                            <a style="width:121%; margin-left:-1%%; padding-right: 32px;" class="btn btn-success btn-block text-right" href="/student/coursedetail?courseId=${item.courseId}">Go to Course</a>
                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                </div>`
                        ;


                });
                var id2 = '#products'; // Corrected the selector to target the tbody of #table2
                $(id2).empty().append(rows1);
                var imgElements = document.querySelectorAll('.item .thumbnail img');

                // Set src attribute for each img element
                imgElements.forEach(function (img) {
                    img.src = getRandomStringFromArrayforSearch(); // Corrected function name
                    img.style.width = '245px'; // Set width
                    img.style.height = '163px'; // Set height
                });
            }
            function onFailed(error) {
                window.alert(error.statusText);
            }
            serviceUrl = "http://localhost:5020/Category/getAll";
            window.Manager.GetAPI(serviceUrl, onSuccess2, onFailed2);
            var obj = "";
            function onSuccess2(jsonData) {
                var rows1 = `<button class="btn cate active" data-category="all" value="0"> all </button>`;

                $.each(jsonData, function (i, item) {
                    rows1 += `  <button class="btn cate" value="${item.categoryId}">${item.categoryName}</button>`;
                });
                var id2 = '#categoryfilter'; // Corrected the selector to target the tbody of #table2
                $(id2).empty().append(rows1);
                $('.category .btn.cate').click(function () {
                    // Remove 'active' class from all category buttons
                    $('.category .btn.cate').removeClass('active');

                    // Add 'active' class to the clicked category button
                    $(this).addClass('active');
                });
            }
            function onFailed2(error) {
                window.alert(error.statusText);
            }

            return obj;
        },
        GetAllProductByLink: function (link) {
            var serviceUrl = link;
            window.Manager.GetAPI(serviceUrl, onSuccess, onFailed);
            var obj = "";
            function onSuccess(jsonData) {
                obj = jsonData;
                var rows1 = "";

                $.each(jsonData, function (i, item) {


                    rows1 += `                        <div class="item col-lg-3 col-md-5 col-sm-11">
                                        <div class="thumbnail">
                                                <img class="group list-group-image img-fluid" src="https://ihs.redvector.com/lpe/assets/core/img/large-placeholder-course.png" alt="" />
                                            <div class="caption">
                                                <h4 class="group inner list-group-item-heading">
                                                        ${item.courseName}
                                                </h4>
                                                    <p class="group inner list-group-item-text" style="position: relative;">
                                                            ${item.title}
                                                </p>
                                                    <div class="row" style="position: absolute;bottom: 19px;right: 38px;">
                                                    <div class="col-6">
                                                        <p class="lead">
                                                                    $ ${item.price}
                                                        </p>
                                                    </div>
                                                    <div class="col-6">
                                                                                <a style="width:121%; margin-left:-1%%; padding-right: 32px;" class="btn btn-success btn-block text-right" href="/student/coursedetail?courseId=${item.courseId}">Go to Course</a>
                                                    </div>
                                                </div>
                                            </div>
                                        </div>
                                    </div>`
                        ;


                });
                var id2 = '#products'; // Corrected the selector to target the tbody of #table2
                $(id2).empty().append(rows1);
                var imgElements = document.querySelectorAll('.item .thumbnail img');

                // Set src attribute for each img element
                imgElements.forEach(function (img) {
                    img.src = getRandomStringFromArrayforSearch(); // Corrected function name
                    img.style.width = '245px'; // Set width
                    img.style.height = '163px'; // Set height
                });
            }
            function onFailed(error) {
                window.alert(error.statusText);
            }
            return obj;
        },
        GetAPI: function (serviceUrl, successCallback, errorCallback) {
            $.ajax({
                type: "GET",
                url: serviceUrl,
                dataType: "json",
                success: successCallback,
                error: errorCallback
            });
        }
    }

</script>
</html>