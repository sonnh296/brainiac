<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Document</title>
</head>
<body>
    <div class="cate-courses">
        <h3></h3>
        <div class="cate-course-list">
            <div class="course-name"></div>
            <div class="course-title"></div>
            <div class="author"></div>
            <div class="category"></div>
            <div class="Price"></div>
        </div>
    </div>
    </div>

    <script>
        const urlParam = new URLSearchParams(window.location.search);
        const categoryId = urlParam.get("categoryId");
        fetch(`http://localhost:5020/api/Course/CourseByCategory/${categoryId}`)
            .then((response) => response.json())
            .then((data) => {
                var h3 = document.querySelector(".cate-courses h3");
                h3.innerHTML = `All courses of cate ${data[0].categoryName}`;
                var relatedCourseList = document.querySelector(".cate-course-list");
                var relatedCourse = "";
                data.forEach((element) => {
                    var categoriesString = "";
                    element.categories.forEach((cate) => {
                        categoriesString += `${cate.categoryName}  `;
                    });
                    relatedCourse += `<a href="Student/CourseDetail?courseId=${element.courseId}">
                        <div class="related-course">
                      <div class="course-name">${element.name}</div>
                      <div class="course-title">${element.description}</div>
                        <div class="category">${categoriesString}</div>
                        <div class="Price">${element.price}</div>
                    </div>
                    </a>----------------------`;
                });
                relatedCourseList.innerHTML = relatedCourse;
            });
    </script>
</body>
</html>