      document.addEventListener("DOMContentLoaded", function () {
        updateReadMoreButton();
        updatePaginationButtons();
      });

      window.addEventListener("resize", function () {
        updateReadMoreButton();
        updatePaginationButtons();
      });

      function updateReadMoreButton() {
        var contents = document.querySelectorAll(".read-more-content");
        contents.forEach(function (content) {
          var button = content.nextElementSibling;
          if (content.scrollHeight > content.clientHeight) {
            button.style.display = "inline"; // show the button if the content is truncated
          } else {
            button.style.display = "none"; // hide the button if the content is not truncated
          }
        });
      }

      function toggleReadMore(button) {
        var content = button.previousElementSibling;
        content.style.webkitLineClamp = "unset"; // Always show full content
        button.style.display = "none"; // Hide "Read more" button after clicking
      }

      //Pagination comment
      var currentPage = 1;
      var commentsPerPage = 3;

      function prevPage() {
        if (currentPage > 1) {
          currentPage--;
          updatePaginationButtons();
          showComments();
        }
      }

      function nextPage() {
        var totalComments = document.querySelectorAll(".card-comment").length;
        var totalPages = Math.ceil(totalComments / commentsPerPage);
        if (currentPage < totalPages) {
          currentPage++;
          updatePaginationButtons();
          showComments();
        }
      }

      function showComments() {
        var comments = document.querySelectorAll(".card-comment");
        var startIndex = (currentPage - 1) * commentsPerPage;
        var endIndex = startIndex + commentsPerPage;

        comments.forEach(function (comment, index) {
          if (index >= startIndex && index < endIndex) {
            comment.style.display = "block";
          } else {
            comment.style.display = "none";
          }
        });
      }

      function updatePaginationButtons() {
        var totalComments = document.querySelectorAll(".card-comment").length;
        var totalPages = Math.ceil(totalComments / commentsPerPage);
        var paginationContainer = document.getElementById(
          "pagination-container"
        );
        var prevBtn = document.getElementById("prevBtn");
        var nextBtn = document.getElementById("nextBtn");

        paginationContainer.innerHTML = "";

        if (currentPage > 1) {
          var prevButton = document.createElement("button");
          prevButton.innerText = "Pre";
          prevButton.classList.add("btn", "btn-primary");
          prevButton.onclick = function () {
            prevPage();
          };
          paginationContainer.appendChild(prevButton);
        }

        if (currentPage < totalPages) {
          var nextButton = document.createElement("button");
          nextButton.innerText = "Next";
          nextButton.classList.add("btn", "btn-primary");
          nextButton.onclick = function () {
            nextPage();
          };
          paginationContainer.appendChild(nextButton);
        }

        showComments();
      }
    </script>
  </body>
</html>
