@{
    Layout = "_LayoutTeacher";
}
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <title>Home</title>
    <!-- bootstrap -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/css/bootstrap.min.css" rel="stylesheet"
          integrity="sha384-EVSTQN3/azprG1Anm3QDgpJLIm9Nao0Yz1ztcQTwFspd3yD65VohhpuuCOmLASjC" crossorigin="anonymous">
    <!-- js -->
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.7.1/jquery.min.js"></script>
    <script src="~/js/teacher/teacherAddCourse.js"></script>
    <link rel="stylesheet" href="~/css/teacher/style.css" />
</head>

<body>
    <main>
        <div class="add-course">
            <form>
                <div class="add-course-name">
                    <label for="courseName">Course name:</label>
                    <input type="text" id="courseName" name="newCourseName">
                </div>
                <div class="add-course-title">
                    <label for="courseTitle">Course title:</label>
                    <input type="text" id="courseTitle" name="newCourseTitle">
                </div>
                <div class="add-course-price">
                    <label for="coursePrice">Price:</label>
                    <input type="number" id="coursePrice" name="newCoursePrice">
                </div>
                <div id="set-cate"></div>
                <div id="send">
                    <div class="col-sm-10">
                        <button type="button" class="btn btn-primary" id="btn-save-draft">Save draft</button>
                    </div>
                </div>
            </form>
        </div>
    </main>
</body>
</html>
