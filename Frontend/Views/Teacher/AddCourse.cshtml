@{
    Layout = "_LayoutTeacher";
}
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <title>Home</title>
    <!-- bootstrap -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/css/bootstrap.min.css" rel="stylesheet"
          integrity="sha384-EVSTQN3/azprG1Anm3QDgpJLIm9Nao0Yz1ztcQTwFspd3yD65VohhpuuCOmLASjC" crossorigin="anonymous">
    <link rel="stylesheet"
          href="https://unpkg.com/bs-brain@2.0.3/tutorials/timelines/timeline-1/assets/css/timeline-1.css">
    <!-- js -->
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.7.1/jquery.min.js"></script>
    <script src="~/js/teacher/teacherAddCourse.js"></script>
    <link rel="stylesheet" href="~/css/teacher/style.css" />
</head>

<body>
    <main>
        <div class="col-md-6 grid-margin stretch-card">
            <div class="card">
                <div class="card-body add-course">
                    <h4 class="card-title"> Add new course</h4>
                   
                    <form class="forms-sample">
                        <div class="add-course-name form-group">
                            <label for="courseName">Course name:</label>
                            <input type="text" id="courseName" name="newCourseName" class="form-control" placeholder="Username">
                        </div>

                        <div class="add-course-title form-group">
                            <label for="courseTitle">Course title:</label>
                            <input type="text" id="courseTitle" name="newCourseTitle" class="form-control" placeholder="Username">
                        </div>
                        <div class="add-course-price form-group">
                            <label for="coursePrice">Price:</label>
                            <input type="number" id="coursePrice" name="newCoursePrice" class="form-control" placeholder="Username">
                        </div>

                        Category: </br>
                        <div id="set-cate"></div><div id="set-cate"></div>

                        <button button type="button" id="btn-save-draft" class="btn btn-primary" data-toggle="modal"
                                data-target="#staticBackdrop">
                            Save Draff
                        </button>
                        <a href="/Teacher/dashboard">   Back to DashBoard</a>
                    </form>
                </div>
            </div>
        </div>
      
    </main>
</body>
</html>
