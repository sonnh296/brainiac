﻿@{
    Layout = "null";
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <title>Add resource in course @ViewBag.CourseId</title>
    <!-- bootstrap -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/css/bootstrap.min.css" rel="stylesheet"
          integrity="sha384-EVSTQN3/azprG1Anm3QDgpJLIm9Nao0Yz1ztcQTwFspd3yD65VohhpuuCOmLASjC" crossorigin="anonymous">
    <!-- js -->
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.7.1/jquery.min.js"></script>
    <script src="~/js/teacher/teacherAddResource.js"></script>
    <link rel="stylesheet" href="~/css/teacher/style.css" />
</head>

<body>
    <main>
        <div class="course-name">
            <h5 id="course-id" data-param="@ViewBag.CourseId">Test course name</h5>
        </div>
        <div class="add-course">
            <form>
                <div class="resource-name">
                    <label for="name">Resourse name:</label>
                    <input type="text" id="name">
                </div>
                <div class="resource-type">
                    <select class="form-select" aria-label="Default select example" id="type">
                        <option selected>Resource type</option>
                        <option value="Reading">Reading</option>
                        <option value="Video">Video</option>
                    </select>
                </div>
                <div class="resource-content">
                    <label for="content">Content (provide the text content or the link to the video here)</label>
                    <textarea id="content">

                    </textarea>
                </div>
                <div class="description">
                    <label for="content">Description</label>
                    <textarea id="description">

                    </textarea>
                </div>
                <div class="form-check is-free">
                    <input class="form-check-input" type="radio" name="lesson-free" id="free"> Free
                    <input class="form-check-input" type="radio" name="lesson-free" id="paid"> Not free
                </div>
                <div class="col-sm-10">
                     <button type="button" class="btn btn-primary" id="btn-save">Save</button>
                </div>
            </form>
        </div>
    </main>
</body>
</html>

