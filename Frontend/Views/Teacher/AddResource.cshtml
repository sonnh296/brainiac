@{
    Layout = "_LayoutTeacher";
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <title>Add resource</title>
    <!-- bootstrap -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/css/bootstrap.min.css" rel="stylesheet"
          integrity="sha384-EVSTQN3/azprG1Anm3QDgpJLIm9Nao0Yz1ztcQTwFspd3yD65VohhpuuCOmLASjC" crossorigin="anonymous">
    <link rel="stylesheet"
          href="https://unpkg.com/bs-brain@2.0.3/tutorials/timelines/timeline-1/assets/css/timeline-1.css">
    <!-- js -->
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.7.1/jquery.min.js"></script>
    <script src="~/js/auth/api.js"></script>
    <script src="~/js/teacher/teacherAddResource.js"></script> 
    <link rel="stylesheet" href="~/css/teacher/style.css" />
</head>

<body>
    <main>
        <div class="course-name">
            <h5 id="course-info" data-param="@ViewBag.CourseId">Test course name</h5>
        </div>
        <div class="add-course">
           

            <form class="forms-sample">
                <div class="add-course-name resource-name form-group">
                    <label for="name">Resourse name:</label>
                    <input type="text" id="name" class="form-control" placeholder="Username" />
                </div>
                <div class="resource-type" style="width: 70%">
                    <select class="form-select" aria-label="Default select example" id="type">
                        <option selected>Resource type</option>
                        <option value="Reading">Reading</option>
                        <option value="Video">Video</option>
                    </select>
                </div>
                <div class="add-course-title resource-content form-group">
                    <label for="content">Content (provide the text content or the link to the video here)</label>
                    <textarea id="content" class="form-control">

                    </textarea>
                </div>

                <div class="add-course-title description form-group">
                    <label for="content">Description:</label>
                    <textarea id="description" class="form-control"> 

                    </textarea>
                </div>
                <div class="form-check is-free">
                    <input type="radio" name="isFree" value="1" id="free">
                    <label for="free">Free</label>
                    <input type="radio" name="isFree" value="0" id="paid">
                    <label for="paid">Not free</label>
                </div>
                <div class="col-sm-10">
                    <button type="button" class="btn btn-primary" id="btn-save">Save</button>
                </div>
            </form>
        </div>
    </main>
    
</body>


</html>

