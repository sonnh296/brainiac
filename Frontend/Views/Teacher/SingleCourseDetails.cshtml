@{
    Layout = "_LayoutTeacher";
}

<head>
    <meta charset="UTF-8">
    <title>Detail course</title>
    <!-- bootstrap -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/css/bootstrap.min.css" rel="stylesheet"
          integrity="sha384-EVSTQN3/azprG1Anm3QDgpJLIm9Nao0Yz1ztcQTwFspd3yD65VohhpuuCOmLASjC" crossorigin="anonymous">
    <!-- js -->
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.7.1/jquery.min.js"></script>
    <script src="~/js/auth/api.js"></script>
    <script src="~/js/teacher/singleCourseDetails.js"></script>
    <link rel="stylesheet" href="~/css/teacher/coursedetail/style.css" />
</head>

<body>
    <main>
        
            
        
        <div class="course-detail">
            <div style="display:flex;width:100%;">
                <div>
                <a href="/Teacher/dashboard">   Back to DashBoard</a>
                <button style ="margin-right: 20%;" id="btn-delete" class="btn btn-danger">Delete course</button>
                </div>
                <h2>Course general information</h2>
            </div>
            <div class="general-info">
      

                <div class="add-course-name course-title form-group">
                    <label for="course-title-name">Course name:</label>
                    <input type="text" id="course-title-name"
                           name="course-title-name"
                           value="John Doe"
                           disabled="true" class="form-control" placeholder="Username" />
                </div>

                <div class="categories form-group">
                    <label for="course-title-name">Categories: </label>
                    <div class="category-list">
                        <div class="category-chip">
                            <p>Networking</p>
                        </div>
                    </div>
                </div>
              

                <div class="add-course-title course-description form-group">
                    <label for="course-description">Description:</label>
                    <input type="text" id="course-description"
                           name="course-description"
                           rows="4"
                           cols="50"
                           disabled="true" class="form-control" placeholder="Username">
                </div>


                <div class="add-course-price course-price form-group">
                    <label for="price">Price:</label>
                    <input type="number" id="price" name="price" class="form-control" 
                           disabled="true" placeholder="Username">
                </div>

                <div>
                    <button class="btn btn-primary" id="edit-button">Edit info</button>
                    <button class="btn btn-primary" id="save-button" disabled>Save</button>
                </div>



            </div>
            <div class="add-lesson">
                <button class="btn btn-primary" id="btn-add"
                        data-url='@Url.Action("AddResource", "Teacher")'>
                        Add lesson
                </button>
            </div>
            <div>
                <h2>Lessons</h2>
            </div>
            <div class="lessons">
                <div class="single-lesson">
                    <button class="accordion">Lesson 1</button>
                    <div class="panel">
                        <p>
                            Lorem ipsum dolor sit amet, consectetur adipisicing elit, sed do
                            eiusmod tempor incididunt ut labore et dolore magna aliqua.
                        </p>
                        <div class="edit-lesson">
                            <button>Edit</button>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </main>

    <script type="text/javascript" src="~/js/teacher/detailcourse/script.js"></script>
    <script>
        function redirectToAnotherPage() {
            var url = '@Url.Action("AddResource", "Teacher", new { courseId = "parameterValue" })';
            window.location.href = url;
        }
    </script>
</body>

